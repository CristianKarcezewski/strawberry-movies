@model List<Strawberry.Models.Domain.Genre>;
@{
}
<div class="tbl-container">
    <h2>Gêneros</h2>

    <table>
        <tr>
            <th>Nomes</th>
            <th>Opções</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.GenreName</td>
                <td>
                    <a href="/Genre/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a href="/Genre/Delete?id=@item.Id" onclick="return window.confirm('Você tem certeza?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>
    <div class="input-container">
        <a href="/Genre/Create" class="btn btn-sec">Back</a>
    </div>
</div>